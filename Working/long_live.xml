        <refrainLine xml:id="lineRef1">Long live the walls we crashed through</refrainLine>
        <refrainLine xml:id="lineRef2">How the kingdom lights shined just for me and you</refrainLine>
        <refrainLine xml:id="lineRef3">I was screaming long live all the magic we made</refrainLine>
        <refrainLine xml:id="lineRef4">And bring on all the pretenders</refrainLine>
        <refrainLine xml:id="lineRef5">One day, we will be remembered</refrainLine>
        <refrainLine xml:id="lineRef6">Long live all the mountains we moved</refrainLine>
        <refrainLine xml:id="lineRef7">I had the time of my life fighting dragons with you</refrainLine>
        <refrainLine xml:id="lineRef8">I was screaming long live that look on your face</refrainLine>
        <refrainLine xml:id="lineRef9">And bring on all the pretenders</refrainLine>
        <refrainLine xml:id="lineRef10">I'm not afraid</refrainLine>
        <refrainLine xml:id="lineRef11" seeAlso="lineRef7">I had the time of my life, with you</refrainLine>
        <refrainLine xml:id="lineRef12" seeAlso="lineRef1">Long, long live the walls we crashed through</refrainLine>
        <refrainLine xml:id="lineRef13" seeAlso="lineRef3">And I was screaming long live all the magic we made</refrainLine>
        <refrainLine xml:id="lineRef14" seeAlso="lineRef6">Singing, long live all the mountains we moved</refrainLine>
        <refrainLine xml:id="lineRef15">And long, long live the look on your face</refrainLine>
